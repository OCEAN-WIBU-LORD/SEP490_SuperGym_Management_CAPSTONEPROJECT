<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_selected="true" android:drawable="@color/colorSelected" />

    <!-- Pressed state -->
    <item android:state_pressed="true" android:drawable="@color/colorPressed" />

    <!-- Focused state -->
    <item android:state_focused="true" android:drawable="@color/colorFocused" />

    <!-- Default state (normal) -->
    <item android:drawable="@color/colorNormal" />

</selector>
